  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "es2017",
      "dom"
    ],
    "checkJs": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
